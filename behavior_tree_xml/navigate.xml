<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="3"
      main_tree_to_execute="BehaviorTree">
  <BehaviorTree ID="BehaviorTree">
    <Repeat num_cycles="20">
      <Sequence>
        <GetWaypoint x="5.65"
                     y="0.962"
                     yaw="1.57"
                     waypoint="{wp}"/>
        <Move goal="{wp}"/>
        <GetWaypoint x="8.59"
                     y="3.77"
                     yaw="3.14"
                     waypoint="{wp}"/>
        <Move goal="{wp}"/>
        <GetWaypoint x="5.72"
                     y="5.49"
                     yaw="-1.57"
                     waypoint="{wp}"/>
        <Move goal="{wp}"/>
        <GetWaypoint x="1.95"
                     y="5.98"
                     yaw="-1.57"
                     waypoint="{wp}"/>
        <Move goal="{wp}"/>
        <GetWaypoint x="0.772"
                     y="-0.151"
                     yaw="0"
                     waypoint="{wp}"/>
        <Move goal="{wp}"/>
      </Sequence>
    </Repeat>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="GetWaypoint">
      <input_port name="x"
                  default="1.0"/>
      <input_port name="y"
                  default="1.0"/>
      <input_port name="yaw"
                  default="1.0"/>
      <output_port name="waypoint"/>
    </Action>
    <Action ID="Move">
      <input_port name="goal"/>
    </Action>
  </TreeNodesModel>

</root>
